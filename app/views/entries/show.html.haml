
- content_for(:head) do
  %meta{'name' => 'viewport', 'content' => 'width=device-width, initial-scale=1, user-scalable=yes'}
  %meta{'http-equiv'=>'Content-Type', 'content' => 'text/html; charset=UTF-8'}
  = javascript_include_tag 'main.js'
  = stylesheet_link_tag 'theme/blue/matsoz_blue.css'
  = stylesheet_link_tag 'theme/yedi/matsoz_yedi.css'
  - begin
    = javascript_include_tag @entry.javascript_file
  - rescue

  - if Rails.env.development?
    = javascript_include_tag 'development.js'

  :javascript
    var wordList = #{@word_list.to_json};
    var currentLetter = '#{@current_letter}';

#container
  #navigation
    .navlinktasiyici
      - letters = []
      - @word_list.keys.each do |key|
        - if @word_list[key].length != 0
          - letters << key

      - index = 0
      - letters.each do |letter|
        - if index == 0
          - piece = 'harf_sol_1'
        - elsif index == 1
          - piece = 'harf_sag_1'
        - elsif index == letters.length - 1
          - if index % 2 == 0
            - piece = 'harf_sol_4'
          - else
            - piece = 'harf_sag_4'
        - elsif index == letters.length - 2
          - if index % 2 == 0
            - piece = 'harf_sol_4'
          - else
            - piece = 'harf_sag_2'
        - elsif index % 4 == 2
          - piece = 'harf_sol_2'
        - elsif index % 4 == 3
          - piece = 'harf_sag_2'
        - elsif index % 4 == 0
          - piece = 'harf_sol_2'
        - elsif index % 4 == 1
          - piece = 'harf_sag_2'

        = link_to letter.to_upcase_turkish + letter, '#', {:class => 'navlink navposition ' + piece, :data=>{:letter => letter}}
        - index = index + 1

      
    #liste.sozcuktasiyici
      - @all_entries.each do |entry|
        - if entry == @entry
          = link_to entry.word, entry_path(entry), {:class => 'sozcuklink sozcukselected'}
        - else
          = link_to entry.word, entry_path(entry), {:class => 'sozcuklink'}
          
  #inter_container.back
    %div.tanim
      - if @entry.thumbnail?
        %div.simgebg
          = image_tag('theme/blue/ui_img/simge_bg.png', {:width => 139, :height => 143, :style => "position:absolute; top: 0px; left: 0px;"})
          %div.simge
            = image_tag(@entry.thumbnail.url, {:style => "position:absolute; top: 0px; left: 0px;"})
      %strong.name
        = @entry.word + ": "
      %span.definition
        - @chunks.each do |chunk|
          - chunk.each do |key, value|
            - if value == nil
              - if key != nil
                %span>=key.gsub(' ', "\n")
            - else
              %span>= link_to key, entry_path(value)
      %div.additional_info
        - if @entry.additionalInfo
          %em
            = @entry.additionalInfo
          
    %div{:class=>'ornek ornek_border'}
      #div{:class =>'ornekbaslik ornekbaslik_bg'}
    %div.mavikontrol
    %div.etkilesimalan
